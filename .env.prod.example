# ==============================================================================
# Production Environment Variables Template
# ==============================================================================
# Copy this file to .env.prod and fill in your production values.
# This file contains environment variables for production deployment.
# DO NOT commit .env.prod to version control!
# ==============================================================================

# ------------------------------------------------------------------------------
# Django Core Settings
# ------------------------------------------------------------------------------
# Generate a new secret key for production: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-production-secret-key-here-generate-a-new-one

# Security settings for production
DEBUG=False
ALLOWED_HOSTS=your-domain.com,www.your-domain.com,your-server-ip

# ------------------------------------------------------------------------------
# Database Configuration
# ------------------------------------------------------------------------------
# Production PostgreSQL database credentials
DB_NAME=stircraft_prod
DB_USER=stircraft_prod
DB_PASSWORD=your-secure-database-password
DB_HOST=db
DB_PORT=5432

# Alternative: Use DATABASE_URL (recommended for cloud deployments)
# DATABASE_URL=postgres://user:password@host:port/database

# ------------------------------------------------------------------------------
# Redis Configuration (for caching and sessions)
# ------------------------------------------------------------------------------
REDIS_URL=redis://redis:6379/0

# ------------------------------------------------------------------------------
# Email Settings (SMTP configuration)
# ------------------------------------------------------------------------------
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.your-email-provider.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@your-domain.com
EMAIL_HOST_PASSWORD=your-email-password

# Default "from" email address
DEFAULT_FROM_EMAIL=StirCraft <noreply@your-domain.com>
SERVER_EMAIL=StirCraft Server <server@your-domain.com>

# ------------------------------------------------------------------------------
# Security Settings
# ------------------------------------------------------------------------------
# Force HTTPS redirects
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# Session and CSRF security
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True

# ------------------------------------------------------------------------------
# Static and Media Files
# ------------------------------------------------------------------------------
# For cloud storage (AWS S3, Google Cloud Storage, etc.)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_STORAGE_BUCKET_NAME=your-s3-bucket-name
# AWS_S3_REGION_NAME=us-east-1
# AWS_S3_CUSTOM_DOMAIN=your-cloudfront-domain.com

# For local file storage
STATIC_ROOT=/app/stircraft/stir_craft/staticfiles
MEDIA_ROOT=/app/stircraft/stir_craft/media

# ------------------------------------------------------------------------------
# Logging and Monitoring
# ------------------------------------------------------------------------------
LOG_LEVEL=INFO

# Sentry for error monitoring (optional but recommended)
# Sign up at https://sentry.io and get your DSN
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ------------------------------------------------------------------------------
# Performance Settings
# ------------------------------------------------------------------------------
# Gunicorn worker configuration
GUNICORN_WORKERS=4
GUNICORN_WORKER_CLASS=sync
GUNICORN_MAX_REQUESTS=1000
GUNICORN_TIMEOUT=120

# Database connection pooling
DB_CONN_MAX_AGE=60

# ------------------------------------------------------------------------------
# External API Keys (if needed)
# ------------------------------------------------------------------------------
# TheCocktailDB API (if using external cocktail data)
# COCKTAILDB_API_KEY=your-api-key

# Google Analytics (if using analytics)
# GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# ------------------------------------------------------------------------------
# Backup and Maintenance
# ------------------------------------------------------------------------------
# Database backup settings
# BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
# BACKUP_RETENTION_DAYS=30

# Maintenance mode
# MAINTENANCE_MODE=False

# ------------------------------------------------------------------------------
# Custom Application Settings
# ------------------------------------------------------------------------------
# Maximum file upload size (in bytes)
MAX_UPLOAD_SIZE=10485760  # 10MB

# Session timeout (in seconds)
SESSION_COOKIE_AGE=86400  # 24 hours

# Rate limiting
RATE_LIMIT_LOGIN=5/min
RATE_LIMIT_API=100/hour
