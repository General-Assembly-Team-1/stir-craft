# Copy this to .env and fill in your actual values
# DO NOT commit .env to version control - it contains secrets!

# Required: Django secret key (generate a new one for each environment)
SECRET_KEY=your-secret-key-here-generate-a-new-one

# Development vs Production
DEBUG=True

# Allowed hosts (comma-separated list)
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
# Option 1: Use DATABASE_URL (recommended)
DATABASE_URL=postgres://macfarley:your-db-password@localhost:5432/stircraft

# Option 2: Use individual database variables (alternative)
DB_ENGINE=django.db.backends.postgresql
DB_NAME=stircraft
DB_USER=macfarley
DB_PASSWORD=your-db-password
DB_HOST=localhost
DB_PORT=5432

# Optional: Email settings (for password reset, notifications)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=

# Optional: External API keys
# SENTRY_DSN=https://your-sentry-dsn-here
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_STORAGE_BUCKET_NAME=

# Optional: Media storage settings
MEDIA_ROOT=stircraft/stir_craft/media
STATIC_ROOT=stircraft/stir_craft/staticfiles
