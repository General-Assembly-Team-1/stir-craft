{
  "name": "stircraft-js-tests",
  "version": "1.0.0",
  "description": "JavaScript tests for StirCraft interactive elements",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.0.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "*.js",
      "!tests/**"
    ],
    "setupFilesAfterEnv": ["<rootDir>/tests/test-setup.js"]
  }
}
